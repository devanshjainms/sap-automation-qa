exclude_paths:
  - src/modules
  - src/module_utils
  - .github
  - src/roles/ha_db_hana/tasks/files/
  - src/roles/ha_scs/tasks/files/

skip_list:
  - no-handler
  - run-once[task]
  - run-once[play]
  - key-order[task]
  - key-order[play]
  - name[casing]
  - no-changed-when
  - role-name
  - var-naming
  - yaml[braces]
  - yaml[colons]
  - yaml[commas]
  - yaml[indentation]
  - yaml[line-length]
  - yaml[octal-values]
  - name[template]
  - command-instead-of-shell
  - jinja[spacing]
